{
"version": "2.0.0",
"tasks": [
    {
        "type": "shell",
        "label": "C/C++: g++-14 build active file",
        "command": "/opt/homebrew/bin/g++-14",
        "args": [
            "-g",
            "${fileDirname}/${fileBasenameNoExtension}.cpp",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "/usr/bin"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
]
}